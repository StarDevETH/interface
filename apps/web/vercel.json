{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=60, stale-while-revalidate=30"
        },
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' data: 'wasm-unsafe-eval' https://*.vercel.app;"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' data: 'wasm-unsafe-eval' https://*.vercel.app;"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' data: 'wasm-unsafe-eval' https://*.vercel.app;"
        }
      ]
    },
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' data: 'wasm-unsafe-eval' https://*.vercel.app;"
        }
      ]
    }
  ]
}
